<Login_Popup>:
    title: "Log in"
    auto_dismiss: False
    username: username
    password: password
    FloatLayout:
        Label:
            text: "Login"
            size_hint: 1, 0.2
            pos_hint: {"y":0.8, "x":0.001}
        LoginInput:
            id: username
            multiline: False
            size_hint: 1, 0.2
            pos_hint: {"y":0.6, "x":0.001}
        Label:
            text: "Password"
            size_hint: 1, 0.2
            pos_hint: {"y":0.4, "x":0.001}
        PasswordInput:
            id: password
            multiline: False
            size_hint: 1, 0.2
            pos_hint: {"y":0.2, "x":0.001}
            password: True
        Button:
            text: "Submit"
            size_hint: 1, 0.2
            pos_hint: {"y":0, "x":0.001}
            on_release: root.login()

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            filters: ["*.png", "*.jpg", "*.jpeg"]
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()
            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

<Creator_Screen>:
    rows: 5
    cols: 2
    name: name
    desc: desc
    price: price
    path: path
    Label:
        text: "Nazwa:"
    TextInput:
        id: name
        multiline: False
    Label:
        text: "Opis:"
    TextInput:
        id: desc
        multiline: False
    Label:
        text: "Cena:"
    TextInput:
        id: price
        multiline: False
        input_filter: "int"
    Label:
        text: "Zdjęcie"
    Button:
        text: "Wybierz"
        on_release: root.show_load()
    Label:
        id: path
        text: ""
    Button:
        text: "Wyślij"
        on_release: root.send_photo()