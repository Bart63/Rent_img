<Login_Popup>:
    title: "Log in"
    auto_dismiss: False
    username: username
    password: password
    FloatLayout:
        Label:
            text: "Login"
            size_hint: 1, 0.2
            pos_hint: {"y":0.8, "x":0.001}
        LoginInput:
            id: username
            multiline: False
            size_hint: 1, 0.2
            pos_hint: {"y":0.6, "x":0.001}
        Label:
            text: "Password"
            size_hint: 1, 0.2
            pos_hint: {"y":0.4, "x":0.001}
        PasswordInput:
            id: password
            multiline: False
            size_hint: 1, 0.2
            pos_hint: {"y":0.2, "x":0.001}
            password: True
        Button:
            text: "Submit"
            size_hint: 1, 0.2
            pos_hint: {"y":0, "x":0.001}
            on_release: root.login()

<Client_Screen>:
    cols: 2
    balance: balance
    Label:
        text: "Sklep:"
    Button:
        text: "Pokaż"
        on_release: root.Show_Shop()
    Label:
        text: "Wypożyczone:"
    Button:
        text: "Pokaż"
        on_release: root.Show_Rented()
    Label:
        id: balance
        text: "Balans: 0$"
    Button:
        text: "+10$"
        on_release: root.Add_Balance()